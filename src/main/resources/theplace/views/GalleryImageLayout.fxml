<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.effect.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<?import javafx.scene.image.*?>

<AnchorPane fx:id="imageWrapper" stylesheets="@../../styles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER">
         <children>
            <AnchorPane fx:id="imageContainer" VBox.vgrow="ALWAYS">
               <children>
                  <ImageView fx:id="image" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/loading.gif" />
                     </image>
                  </ImageView>
               </children>
               <VBox.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </VBox.margin>
            </AnchorPane>
         </children>
         <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </padding>
      </VBox>
      <BorderPane fx:id="overlayPane" prefHeight="80.0" style="-fx-background-color: rgba(255,255,255,0.5);" visible="false" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
   </children>
   <effect>
      <DropShadow blurType="TWO_PASS_BOX" color="#0000009e" height="20.0" offsetX="2.0" offsetY="2.0" radius="9.5" width="20.0" />
   </effect>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>
</AnchorPane>
